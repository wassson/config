// Zed settings
//
// For information on how to configure Zed, see the Zed
// documentation: https://zed.dev/docs/configuring-zed
//
// To see all of Zed's default settings without changing your
// custom settings, run the `open default settings` command
// from the command palette or from `Zed` application menu.
{
  "edit_predictions": {
    "mode": "eager",
    "copilot": {
      "proxy": null,
      "proxy_no_verify": null,
      "enterprise_uri": null
    },
    "enabled_in_text_threads": false
  },
  "icon_theme": "Colored Zed Icons Theme Dark",
  "features": {
    "edit_prediction_provider": "zed"
  },
  "file_finder": {
    "modal_max_width": "large"
  },
  "file_scan_exclusions": ["**/build"],
  "gutter": {
    "runnables": false
  },
  "indent_guides": {
    "enabled": false,
    "background_coloring": "indent_aware",
    "coloring": "indent_aware",
    "line_width": 1
  },
  "preview_tabs": {
    "enable_preview_from_file_finder": true,
    "enable_preview_from_code_navigation": true
  },
  "project_panel": {
    "dock": "right"
  },
  "tab_bar": {
    "show_nav_history_buttons": false,
    "show": true
  },
  "tabs": {
    "file_icons": false
  },
  "terminal": {
    "dock": "left"
  },
  "toolbar": {
    "breadcrumbs": false,
    "quick_actions": false
  },
  "vim_mode": true,
  "theme": "Duskfox",
  "ui_font_size": 14,
  "ui_font_family": "JetBrainsMono Nerd Font",
  "buffer_font_family": "JetBrainsMono Nerd Font",
  "buffer_font_size": 13.5,
  "tab_size": 2,
  "cursor_blink": false,
  "agent": {
    "always_allow_tool_actions": true,
    "default_model": {
      "provider": "anthropic",
      "model": "claude-sonnet-4-latest"
    },
    "button": true
  },
  "collaboration_panel": {
    "button": false,
    "dock": "right"
  },
  "chat_panel": {
    "button": "never"
  },
  "notification_panel": {
    "button": false
  },
  "git": {
    "inline_blame": {
      "enabled": false
    }
  },
  "languages": {
    "JavaScript": {
      "format_on_save": "off"
    },
    "JSON": {
      "format_on_save": "off"
    },
    "Rust": {
      "tab_size": 4
    },
    "Zig": {
      "tab_size": 4
    }
  },
  "lsp": {
    "ruby-lsp": {
      "initialization_options": {
        "enabledFeatures": {
          "diagnostics": true
        }
      }
    },
    "tailwindcss-language-server": {
      "settings": {
        "includeLanguages": {
          "erb": "html",
          "ruby": "html"
        },
        "experimental": {
          "classRegex": ["\\bclass:\\s*['\"]([^'\"]*)['\"]"]
        }
      }
    },
    "rust-analyzer": {
      "initialization_options": {
        "rust": {
          "analyzerTargetDir": true
        },
        "numThreads": 4,
        "cachePriming": {
          "enable": false
        },
        "checkOnSave": {
          "enable": true,
          "command": "check",
          "allTargets": false
        },
        "cargo": {
          "allFeatures": false,
          "features": []
        },
        "files": {
          "excludeDirs": [
            "target",
            "node_modules",
            ".git",
            "dist",
            "build",
            ".cargo"
          ]
        },
        "diagnostics": {
          "disabled": ["unresolved-proc-macro"]
        },
        "inlayHints": {
          "chainingHints": {
            "enable": false
          },
          "parameterHints": {
            "enable": false
          },
          "typeHints": {
            "enable": false
          }
        }
      }
    },
    "zls": {
      "initialization_options": {
        "zig_exe_path": "/Users/austinwasson/tools/zig-nightly/zig",
        "zig_lib_path": "/Users/austinwasson/tools/zig-nightly/lib"
      }
    }
  }
}
