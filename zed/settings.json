// Zed settings
//
// For information on how to configure Zed, see the Zed
// documentation: https://zed.dev/docs/configuring-zed
//
// To see all of Zed's default settings without changing your
// custom settings, run the `open default settings` command
// from the command palette or from `Zed` application menu.
{
  "vim_mode": true,
  "tab_bar": {
    "show_nav_history_buttons": false,
    "show": true
  },
  "tabs": {
    "file_icons": false
  },
  "toolbar": {
    "breadcrumbs": false,
    "title": true,
    "quick_actions": false
  },
  "project_panel": {
    "dock": "right"
  },
  "theme": "JetBrains New Dark",
  "ui_font_size": 14,
  "ui_font_family": "JetBrainsMono Nerd Font Mono",
  "buffer_font_family": "JetBrainsMono Nerd Font Mono",
  "buffer_font_size": 13,
  "tab_size": 2,
  "cursor_blink": false,
  "assistant": {
    "default_model": {
      "provider": "zed.dev",
      "model": "claude-3-5-sonnet-20240620"
    },
    "version": "2",
    "button": true
  },
  "collaboration_panel": {
    "button": false,
    "dock": "right",
    "enabled": false
  },
  "chat_panel": {
    "button": false
  },
  "notification_panel": {
    "button": false
  },
  "git": {
    "inline_blame": {
      "enabled": false
    }
  },
  "indent_guides": {
    "enabled": false
  },
  "languages": {
    "C++": {
      "language_servers": ["clangd"],
      "format_on_save": "on"
    },
    "GDScript": {
      "tab_size": 2,
      "hard_tabs": true,
      "format_on_save": "on"
    },
    "JavaScript": {
      "format_on_save": "off"
    },
    "Ruby": {
      "tab_size": 2,
      "enable_language_server": true,
      "language_servers": [
        "ruby-lsp",
        "!solargraph",
        "tailwind-language-server"
      ],
      "format_on_save": "on",
      "formatter": {
        "external": {
          "command": "./bin/rubocop",
          "arguments": [
            "--fail-level",
            "error",
            "--auto-correct",
            "--stdin",
            "{buffer_path}",
            "--stderr",
            "--server"
          ]
        }
      }
    }
  },
  "lsp": {
    "gdscript": {
      "binary": {
        "arguments": ["127.0.0.1", "6005"]
      }
    },
    "ruby-lsp": {
      "initialization_options": {
        "enabledFeatures": {
          "diagnostics": true
        }
      }
    },
    "tailwindcss-language-server": {
      "settings": {
        "includeLanguages": {
          "erb": "html",
          "ruby": "html"
        },
        "experimental": {
          "classRegex": ["\\bclass:\\s*['\"]([^'\"]*)['\"]"]
        }
      }
    }
  },
  "language_overrides": {
    "JavaScript": {
      "external": {
        "command": "prettier",
        "arguments": ["--stdin-filepath", "{buffer_path}"]
      }
    }
  }
}
