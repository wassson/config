[
  {
    "context": "Workspace",
    "bindings": {
      "cmd-1": "workspace::ToggleRightDock",
      "shift-cmd-o": "projects::OpenRecent",
      "cmd-alt-o": "projects::OpenRecent"
    }
  },
  {
    "context": "Editor",
    "bindings": {
      "cmd-click": "editor::GoToDefinition",
      "shift-cmd-o": "file_finder::Toggle",
      "cmd-shift-up": "editor::MoveLineUp",
      "cmd-shift-down": "editor::MoveLineDown",
      "cmd-shift-n": "pane::ActivateNextItem",
      "cmd-shift-p": "pane::ActivatePreviousItem"
    }
  },
  {
    "context": "Editor && vim_mode != normal && !menu",
    "bindings": {
      "j k": "vim::NormalBefore"
    }
  },
  {
    "context": "Editor && (vim_mode == normal || vim_mode == visual) && !VimWaiting && !menu",
    "bindings": {
      // <space> leader key stuff
      "space f": "file_finder::Toggle",
      "space e": "project_panel::ToggleFocus",
      //control
      "ctrl-h": "pane::ActivatePreviousItem",
      "ctrl-l": "pane::ActivateNextItem",
      // shift
      "shift-h": "editor::MoveToBeginningOfLine",
      "shift-l": "editor::MoveToEndOfLine"
    }
  },
  {
    "context": "Editor && vim_mode == normal && !VimWaiting && !menu",
    "bindings": {
      "space w": "workspace::Save",
      "right": "pane::ActivateNextItem",
      "left": "pane::ActivatePreviousItem"
    }
  },
  {
    "context": "Editor && vim_mode == visual && !VimWaiting && !menu",
    "bindings": {
      // visual, visual line & visual block modes
    }
  },
  {
    "context": "Editor && vim_mode == insert && !menu",
    "bindings": {
      "ctrl-f": "editor::ConfirmCompletion",
      "cmd-l": "editor::MoveToEnd"
    }
  }
]
